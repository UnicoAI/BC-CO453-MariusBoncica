@model IEnumerable<WebApps.Models.Post>


@{
    ViewData["Title"] = "MB Network Application";
}

<header class="backpanel">
    <h1>MB Network Application</h1>
</header>
<form asp-action="Index" method="get">
    <div class="form-action no-color">
        <p>
            Find By Name:
            <input type="text" name="userName"/>
            <input type="submit" value="search" class="btn" />
            <a class="btn" asp-action="Index"> Back To Posts</a>
        </p>
    </div>
</form>

<p>
    <a class="btn" asp-action="Create" asp-controller="MessagePosts">Upload Message Post</a>
    <a class="btn" asp-action="Create" asp-controller="PhotoPosts">Upload Photo Post</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                PostID
            </th>
           
            <th>
               User Name
            </th>

            
            <th>
               Photo
            </th>
            <th>
                Message
            </th>
            <th>Timestamp

            </th>
            <th>
                Likes
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            MessagePost message = null;
           PhotoPost photo = null;
            if(item is MessagePost)
            {
                message = (MessagePost)item;
            }
            if(item is PhotoPost)
            {
                photo = (PhotoPost)item;
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PostId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
                <!-- <td>
                    @if (message != null)
                    {
                        <span>@message.Message</span>
                    }
                </td> -->
                <td>
                    @if (photo != null)
                    {
                        <img src="/images/@photo.Filename" width="130px" height="130px" style="border:50px;border-radius:20px;animation: nudge 2s linear infinite !important;">
                    }
                </td>
                <td>
                    @if (photo != null)
                    {
                        <span>@photo.Caption</span>
                    }
                </td>
            <td>
                @item.FormatElapsedTime()
            </td>
                <td>@Html.DisplayFor(modelitem => item.Comments)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
