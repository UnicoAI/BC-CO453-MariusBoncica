@model ConsoleAppProject.App02.BMICalculatorWeb
@using ConsoleAppProject.App02
@{
    ViewData["Title"] = "BMICalculatorWeb";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="~/js/inputdecimal2.js"></script>
<div class="text-center jumbotron justify-content-center">

    <figure>
        <div class="flip-card-container" style="max-width:70%;margin-left:15%">
            <h1>
               BMI Score Calculator
            </h1>
            <div class="flip-card">
                <div class="flip-card-front">
                    <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-file-medical-fill" viewBox="0 0 16 16">
                        <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM8.5 4.5v.634l.549-.317a.5.5 0 1 1 .5.866L9 6l.549.317a.5.5 0 1 1-.5.866L8.5 6.866V7.5a.5.5 0 0 1-1 0v-.634l-.549.317a.5.5 0 1 1-.5-.866L7 6l-.549-.317a.5.5 0 0 1 .5-.866l.549.317V4.5a.5.5 0 1 1 1 0zM5.5 9h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1zm0 2h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1z" />
                    </svg>
                    <h2>


                        <span class="gradient-color-text">
                            by Marius Boncica
                        </span>
                    </h2>

                </div>
                <div class="flip-card-back">

                    <h2>
                        <span class="gradient-color-text">
                            This application calculates your BMI and accept both Metric and Imperial Units.
                        </span>
                    </h2>
                    <img src="https://th.bing.com/th?id=OIP.2_1GT3AIyQMcawspie3vAAHaFj&w=288&h=216&c=8&rs=1&qlt=90&o=6&dpr=1.5&pid=3.1&rm=2" style="width:50%;border:50px;border-radius:30px">




                </div>
            </div>
        </div>
    </figure>
</div>
    <hr class="my-4 text-center">
    <div class="d-flex justify-content-center">
        <p class="cta" style="margin:5px;color:white">
            <button class="btn btn-primary btn-lg" style="margin-top:10px;font-size:32px;min-width:150px;" onclick="javascript: $('#i').hide();javascript: $('#m').show();">Metric</button>
        </p>
        <p class="cta" style="margin:5px;color:white">
            <button class="btn btn-primary btn-lg" style="margin-top: 10px;font-size:32px;min-width:150px;" onclick="javascript: $('#m').hide();javascript: $('#i').show();">Imperial</button>
        </p>
    </div>
    <div id="i" style="display:none;">
        <form method="post">
            <div class="form-group">
                <h3 class="text-centre">Height</h3>
                <label for="Feet">Feet</label>
                <input type="number" class="form-control" asp-for="Feet" placeholder="Feet" required />
                <label for="Inch">Inch</label>
                <input type="number" class="form-control floatNumberField" step="0.01" asp-for="Inches" placeholder="Inches" required />
            </div>
            <div class="form-group">
                <h3 class="text-centre" style="margin-top:10px">Weight</h3>
                <label for="Pounds">Pounds</label>
                <input type="number" class="form-control floatNumberField" step="0.01" asp-for="Weight" placeholder="Pounds" required />
            </div>
            <div class="d-flex justify-content-center" style="margin-top:30px">
                <button asp-action="BMIResultI" type="submit" class="btn btn-primary btn-lg">Calculate</button>
            </div>

        </form>
    </div>
    <div id="m" style="display:block;">
        <form method="post">
            <div class="form-group">
                <h3 class="text-centre">Height</h3>
                <label for="Metres">Metres</label>
                <input type="number" class="form-control floatNumberField" step="0.01" asp-for="Height" placeholder="Metres" required />
            </div>
            <div class="form-group">
                <h3 class="text-centre" style="margin-top:10px">Weight</h3>
                <label for="Kilograms">Kilograms</label>
                <input type="number" class="form-control floatNumberField" step="0.01" asp-for="Weight" placeholder="Kilograms" required />
            </div>
            <div class="d-flex justify-content-center" style="margin-top:30px">
                <button asp-action="BMIResultM" type="submit" class="btn btn-primary btn-lg">Calculate</button>
            </div>
        </form>
    </div>


