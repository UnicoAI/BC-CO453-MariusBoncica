                        <div class="flip-card-back">

                            <h2>
                                <span class="gradient-color-text">
                                    Please enter value and choose the units you prefer to calculate.
                                </span>
                            </h2>
                        <img src="https://www.unicoais.com/loadmia.png" style="width:50%;border:50px;border-radius:30px">




                        </div>
                    </div>
                </div>
            </figure>
        </div>
   
    <hr class="my-4 text-center">
    <div class="container">
        <div class="row" style="margin:15px">
            <div class="col-sm-6">
                <h3 class="text-center font-weight-light" style="margin-top:10px;margin-bottom:10px">Distance</h3>
                <form method="post">
                    <div class="form-group">
                        <label for="amount">Enter Value:</label>
                        <input type="number" class="form-control floatNumberField" step="0.01" asp-for="Unit1Value" required />
                    </div>
                    <div class="form-group">
                        <label for="converted">Convert From:</label>
                        <select class="form-control" asp-for="Unit1" asp-items="Html.GetEnumSelectList<DistanceUnits>()" required>
                            <option value="">none</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="toConvert">Convert To:</label>
                        <select class="form-control" asp-for="Unit2" asp-items="Html.GetEnumSelectList<DistanceUnits>()" required>
                            <option value="">none</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary btn-lg" style="margin-bottom:15px">Calculate</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-6" style="background-color:rgba(255,255,255,0.8); border-radius:5px;min-height:275px">
                <h3 class="text-center font-weight-light" style="margin-top:10px;">Result</h3>

                <button readonly class="read_more" placeholder="Enter required values to see results" style="width:100%;min-height:300px;outline:none;border:none;margin-bottom:10px;border-radius:5px;padding:15px;font-size:32px">@Model.ConverterResult(true)</button>
            </div>
        </div>
    </div>
    